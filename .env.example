# AAOS Production Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# FastAPI Settings
# =============================================================================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_WORKERS=4

# =============================================================================
# Database Configuration
# =============================================================================
# Development (SQLite)
# DATABASE_URL=sqlite:///./aaos.db

# Production (PostgreSQL)
DATABASE_URL=postgresql://aaos_user:your_secure_password@localhost:5432/aaos_prod
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# Telemetry Settings
# =============================================================================
TELEMETRY_ENABLED=true
TELEMETRY_SAMPLE_INTERVAL=60
TELEMETRY_FLUSH_INTERVAL=300
TELEMETRY_MAX_LOG_SIZE_MB=100

# =============================================================================
# Load Simulator Settings (for testing)
# =============================================================================
LOAD_TASKS_PER_HOUR=100
LOAD_AGENT_COUNT=5
LOAD_DURATION_HOURS=24

# =============================================================================
# Security (Production Only)
# =============================================================================
# SECRET_KEY=your-secret-key-here
# API_KEY=your-api-key-here
